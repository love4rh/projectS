				<dataSource alias="A3"><![CDATA[SELL_PRICE]]></dataSource>
			</dataSources>
			<dataGroupName><![CDATA[ADD_PRICE]]></dataGroupName>
			<ui>
				<position x="235" y="93" />
				<description><![CDATA[]]></description>
			</ui>
			<joinMethod>inner</joinMethod>
			<addKeyColumn>false</addKeyColumn>
			<equalKeys>
				<equalKey source="BUY_PRICE"><![CDATA[P_CODE]]></equalKey>
				<equalKey source="ITEMS"><![CDATA[P_CODE]]></equalKey>
				<equalKey source="SELL_PRICE"><![CDATA[P_CODE]]></equalKey>
			</equalKeys>
			<selectColumns>
