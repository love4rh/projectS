				<columns source="ITEMS"><![CDATA[P_CODE,종목명,RISK]]></columns>
				<columns source="SELL_PRICE"><![CDATA[매도일,매도가]]></columns>
			</selectColumns>
		</processingElem>

		<processingElem type="derived">
			<dataSource alias="A1"><![CDATA[ADD_PRICE]]></dataSource>
			<dataGroupName><![CDATA[ADD_DF]]></dataGroupName>
			<ui>
				<position x="401" y="92" />
				<description><![CDATA[]]></description>
