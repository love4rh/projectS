				<derivedColumn name="REVENUE"><![CDATA[{매수량} * ({매도가} - {매수가})]]></derivedColumn>
			</addColumns>
		</processingElem>

		<processingElem type="groupingValue">
			<dataSource alias="A1"><![CDATA[ADD_DF]]></dataSource>
			<dataGroupName><![CDATA[STAT]]></dataGroupName>
			<ui>
				<position x="542" y="91" />
				<description><![CDATA[]]></description>
			</ui>
			<groupingColumns><![CDATA[매수일, 매도일]]></groupingColumns>
			<generate>
				<column type="sum" delimiter=";" toName="R_SUM"><![CDATA[REVENUE]]></column>
			</generate>
		</processingElem>
	</dataProcessing>

