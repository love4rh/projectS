<?xml version="1.0" encoding="UTF-8"?>

<crawlegoProject version="1.0">
	<settings>
		<params>
		</params>
	</settings>

	<macros>
		<macro name="BASIS_DAY" class="com.lge.crawlego.macro.DefinedValue">
			<param name="value"><![CDATA[20140828]]></param>
		</macro>
		<macro name="M" class="com.lge.crawlego.macro.DefinedValue">
			<param name="value"><![CDATA[1]]></param>
		</macro>
		<macro name="IN_PATH" class="com.lge.crawlego.macro.DefinedValue">
			<param name="value"><![CDATA[D:\work\jupyter\krx\output\logicResult\4PXX-25-10T-10-M2\]]></param>
		</macro>
		<macro name="DO_SERVER" class="com.lge.crawlego.macro.DefinedValue">
			<param name="value"><![CDATA[13.124.29.70]]></param>
		</macro>
		<macro name="START_DATE" class="com.lge.crawlego.macro.ExpressionValue">
			<param name="expression"><![CDATA[DATETOSTR(STRTODATE(SUBSTR('$(BASIS_DAY)', 1, 6), 'yyyyMM') + $(M) * 31 + 5, 'yyyyMM01')]]></param>
		</macro>
		<macro name="END_DATE" class="com.lge.crawlego.macro.ExpressionValue">
			<param name="expression"><![CDATA[DATETOSTR(STRTODATE(SUBSTR('$(BASIS_DAY)', 1, 6), 'yyyyMM') + $(M) * 31 + 35, 'yyyyMM01')]]></param>
		</macro>
		<macro name="P_YEAR" class="com.lge.crawlego.macro.ExpressionValue">
			<param name="expression"><![CDATA[SUBSTR('$(START_DATE)', 1, 4)]]></param>
		</macro>
	</macros>



	<inputNodes>
		<inputNode name="ITEMS" type="FILE">
			<path><![CDATA[$(IN_PATH)$(BASIS_DAY)-RESULT.txt]]></path>
			<columns>
				<column name="P_CODE" type="string" />
				<column name="종목명" type="string" />
				<column name="자산총계" type="real" />
				<column name="시가총액_억" type="real" />
				<column name="매수일" type="string" />
				<column name="매수가" type="real" />
				<column name="매도일" type="string" />
				<column name="매도가" type="real" />
				<column name="거래량" type="real" />
				<column name="매수량" type="real" />
				<column name="RISK" type="real" />
				<column name="REVENUE" type="real" />
			</columns>
			<ui>
				<position x="112" y="104" />
				<description><![CDATA[]]></description>
			</ui>
		</inputNode>

		<inputNode name="PRICE" type="dataOn">
			<query><![CDATA[SELECT 날짜, 종목코드 "P_CODE", 종가
  FROM PRICE.Y$(P_YEAR)
 WHERE '$(START_DATE)' <= 날짜 AND 날짜 < '$(END_DATE)']]></query>
			<params>
				<param name="collection"><![CDATA[PRICE]]></param>
				<param name="password"><![CDATA[1234]]></param>
				<param name="port"><![CDATA[6362]]></param>
				<param name="server"><![CDATA[$(DO_SERVER)]]></param>
				<param name="user"><![CDATA[admin]]></param>
			</params>
			<columns>
				<column name="날짜" type="string" />
				<column name="P_CODE" type="string" />
				<column name="종가" type="real" />
			</columns>
			<ui>
				<position x="109" y="256" />
				<description><![CDATA[]]></description>
			</ui>
		</inputNode>
	</inputNodes>


	<dataProcessing>
		<processingElem type="merge">
			<dataSources>
				<dataSource alias="A1"><![CDATA[ITEMS]]></dataSource>
				<dataSource alias="A2"><![CDATA[PRICE]]></dataSource>
			</dataSources>
			<dataGroupName><![CDATA[SEL_PRICE_DATA]]></dataGroupName>
			<ui>
				<position x="241" y="180" />
				<description><![CDATA[]]></description>
			</ui>
			<joinMethod>inner</joinMethod>
			<addKeyColumn>false</addKeyColumn>
			<equalKeys>
				<equalKey source="ITEMS"><![CDATA[P_CODE]]></equalKey>
				<equalKey source="PRICE"><![CDATA[P_CODE]]></equalKey>
			</equalKeys>
			<selectColumns>
				<columns source="ITEMS"><![CDATA[P_CODE,종목명,매수일,매수가,매수량]]></columns>
				<columns source="PRICE"><![CDATA[날짜,종가]]></columns>
			</selectColumns>
		</processingElem>

		<processingElem type="sort">
			<dataSource alias="A1"><![CDATA[SEL_PRICE_DATA]]></dataSource>
			<dataGroupName><![CDATA[SortColumn_1]]></dataGroupName>
			<ui>
				<position x="385" y="256" />
				<description><![CDATA[]]></description>
			</ui>
			<sortColumns>
				<column order="ascending">P_CODE</column>
				<column order="ascending">날짜</column>
			</sortColumns>
		</processingElem>

		<processingElem type="derived">
			<dataSource alias="A1"><![CDATA[SortColumn_1]]></dataSource>
			<dataGroupName><![CDATA[Derived_1]]></dataGroupName>
			<ui>
				<position x="531" y="256" />
				<description><![CDATA[]]></description>
			</ui>
			<addColumns>
				<derivedColumn name="D_IDX"><![CDATA[IIF( @ROWNUM = 1, 1,
  IIF( {P_CODE} <> {P_CODE}[-1], 1, GETVALUE(7, -1) + 1 )
)]]></derivedColumn>
				<derivedColumn name="MM"><![CDATA[IIF( @ROWNUM = 1, 1,
  IIF( {P_CODE} <> {P_CODE}[-1], 1, {종가} / {종가}[-1] )
)]]></derivedColumn>
				<derivedColumn name="TMM"><![CDATA[IIF( @ROWNUM = 1, 1,
  IIF( {P_CODE} <> {P_CODE}[-1] OR {D_IDX} % 3= 1, {MM}, {MM} * GETVALUE(9, -1) )
)]]></derivedColumn>
			</addColumns>
		</processingElem>

		<processingElem type="select">
			<dataSource alias="A1"><![CDATA[Derived_1]]></dataSource>
			<dataGroupName><![CDATA[SelectData_1]]></dataGroupName>
			<ui>
				<position x="677" y="256" />
				<description><![CDATA[]]></description>
			</ui>
			<condition><![CDATA[{D_IDX} % 3 = 0]]></condition>
		</processingElem>

		<processingElem type="pivot">
			<dataSource alias="A1"><![CDATA[SelectData_1]]></dataSource>
			<dataGroupName><![CDATA[Pivoting_3]]></dataGroupName>
			<ui>
				<position x="823" y="256" />
				<description><![CDATA[]]></description>
			</ui>
			<columnColumns><![CDATA[D_IDX]]></columnColumns>
			<rowColumns><![CDATA[P_CODE, 종목명]]></rowColumns>
			<valueColumn><![CDATA[TMM]]></valueColumn>
			<recalculateRuntime><![CDATA[false]]></recalculateRuntime>
			<remake>true for remaking pivot columns</remake>
			<!-- DO NOT EDIT BELOW -->
			<columns>
				<column name="P_CODE" type="string" />
				<column name="종목명" type="string" />
				<column name="3.0" type="real" />
				<column name="6.0" type="real" />
				<column name="9.0" type="real" />
				<column name="12.0" type="real" />
				<column name="15.0" type="real" />
				<column name="18.0" type="real" />
				<column name="21.0" type="real" />
			</columns>
		</processingElem>

		<processingElem type="select">
			<dataSource alias="A1"><![CDATA[SEL_PRICE_DATA]]></dataSource>
			<dataGroupName><![CDATA[SelectData_2]]></dataGroupName>
			<ui>
				<position x="385" y="104" />
				<description><![CDATA[]]></description>
			</ui>
			<condition><![CDATA[{날짜} = '20140924']]></condition>
		</processingElem>

		<processingElem type="derived">
			<dataSource alias="A1"><![CDATA[SelectData_2]]></dataSource>
			<dataGroupName><![CDATA[Derived_2]]></dataGroupName>
			<ui>
				<position x="531" y="104" />
				<description><![CDATA[]]></description>
			</ui>
			<addColumns>
				<derivedColumn name="손익"><![CDATA[({종가} - {매수가}) * {매수량}]]></derivedColumn>
			</addColumns>
		</processingElem>
	</dataProcessing>
</crawlegoProject>
